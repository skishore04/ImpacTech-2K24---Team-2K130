<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="Coins Earned \n 40" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/coins" />

    </LinearLayout>
        <TextView
            android:id="@+id/text111"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:textSize="22sp"
            android:textColor="#04177E"
            android:text="Name:" />
        <TextView
            android:id="@+id/displayname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:padding="9dp"
            android:text="SAI KISHORE"
            android:textColor="#DA4516"
            android:hint="Loading...." />

        <TextView
            android:id="@+id/teemx11"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:textSize="22sp"
            android:textColor="#04177E"
            android:text="Email Address:" />
        <TextView
            android:id="@+id/displaymail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:text="kishore.bejugama@gmail.com"
            android:padding="9dp"
            android:textColor="#DA4516"
            android:hint="Loading...." />
        <TextView
            android:id="@+id/tex11"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:textSize="22sp"
            android:textColor="#04177E"
            android:text="Username:" />
        <TextView
            android:id="@+id/displayroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:padding="9dp"
            android:textColor="#DA4516"
            android:hint="Loading...."
            android:text="skishore_04"/>

        <TextView
            android:id="@+id/busspasst"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:textSize="22sp"
            android:textColor="#04177E"
            android:text="Phone Number:" />
        <TextView
            android:id="@+id/statusbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:textSize="20sp"
            android:padding="9dp"
            android:textColor="#DA4516"
            android:text="9063729434"
            android:hint="Loading...." />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/round_bg"
            android:text="Logout" />
    </LinearLayout>
    </ScrollView>
</FrameLayout>
